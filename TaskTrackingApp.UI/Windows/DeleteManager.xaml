<Window x:Class="TaskTrackingApp.UI.Windows.DeleteManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTrackingApp.UI.Windows"
        mc:Ignorable="d"
        Title="Удаление руководителя" Height="300" Width="600" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Выберите руководителя для удаления" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="10"/>
        <ComboBox Grid.Row="1" Name="comboBoxNameManager" Margin="10" DisplayMemberPath="Name" SelectionChanged="ComboBoxNameManager_SelectionChanged"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Вы удалите руководителя: " Margin="10"/>
            <TextBox Name="nameManager" IsReadOnly="True" Width="300" Margin="10" Text="{Binding ElementName=comboBoxNameManager, Path=SelectedItem.Content, Mode=OneWay}"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="deleteButton" Content="Удалить" Width="100" Height="20" Margin="10" Click="DeleteButton_Click"/>
            <Button Name="cancelButton" Content="Отмена" Width="100" Height="20" Margin="10" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
