<Window x:Class="TaskTrackingApp.UI.Windows.UpdateManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTrackingApp.UI.Windows"
        mc:Ignorable="d"
        Title="Изменение руководителя" Height="330" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Выберите руководителя для изменения" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="10"/>
        <ComboBox Grid.Row="1" Name="comboBoxNameManager" Margin="10" DisplayMemberPath="Name"/>
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Введите новое имя: " HorizontalAlignment="Right" Margin="10"/>
                <TextBox Name="nameTextBox" HorizontalAlignment="Left" Margin="10" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Введите новую должность: " HorizontalAlignment="Right" Margin="10"/>
                <TextBox Name="postTextBox" HorizontalAlignment="Left" Margin="10" Width="300"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="updateButton" Content="Изменить" Width="100" Height="20" Margin="10" Click="UpdateButton_Click"/>
            <Button Name="cancelButton" Content="Отмена" Width="100" Height="20" Margin="10" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
