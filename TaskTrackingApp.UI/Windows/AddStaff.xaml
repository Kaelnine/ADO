<Window x:Class="TaskTrackingApp.UI.Windows.AddStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTrackingApp.UI.Windows"
        mc:Ignorable="d"
        Title="Добавление нового сотрудника" Height="300" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Новый сотрудник" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Имя сотрудника:"/>
                <TextBox Name="nameTextBox" Width="300" Margin="10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Должность сотрудника:"/>
                <TextBox Name="postTextBox" Width="300" Margin="10,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button Name="addButton" Content="Добавить" Width="100" Height="20" Margin="10" Click="AddButton_Click"/>
            <Button Name="cancelButton" Content="Отменить" Width="100" Height="20" Margin="10" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
