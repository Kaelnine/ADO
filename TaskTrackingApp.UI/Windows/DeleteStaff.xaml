<Window x:Class="TaskTrackingApp.UI.Windows.DeleteStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTrackingApp.UI.Windows"
        mc:Ignorable="d"
        Title="Удаление сотрудника" Height="200" Width="600" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>            
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Выберите сотрудника для удаления" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="10"/>
        <ComboBox Grid.Row="1" Name="comboBoxNameStaff" Margin="10" DisplayMemberPath="Name"/>        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="deleteButton" Content="Удалить" Width="100" Height="20" Margin="10" Click="DeleteButton_Click"/>
            <Button Name="cancelButton" Content="Отмена" Width="100" Height="20" Margin="10" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
