<Window x:Class="TaskTrackingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTrackingApp"
        mc:Ignorable="d"
        Title="Менеджер задач" Height="600" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu DockPanel.Dock="Top" Grid.Row="0">
            <MenuItem Header="_Администрирование">
                <MenuItem Header="_Добавить">
                    <MenuItem Header="_Руководителя" Name="addManager" Click="AddManager_Click"/>
                    <MenuItem Header="_Сотрудника" Name="addStaff" Click="AddStaff_Click" />
                </MenuItem>
                <MenuItem Header="_Изменить">
                    <MenuItem Header="_Руководителя"/>
                    <MenuItem Header="_Сотрудника"/>
                </MenuItem>
                <MenuItem Header="_Удалить">
                    <MenuItem Header="_Руководителя" Name="deleteManager" Click="DeleteManager_Click"/>
                    <MenuItem Header="_Сотрудника" Name="deleteStaff" Click="DeleteStaff_Click"/>
                </MenuItem>
            </MenuItem>
            
        </Menu>
        <TextBlock Grid.Row="1" Text="Список задач" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        <DataGrid x:Name="taskDataGrid" Grid.Row="2" Margin="10" AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="False" HorizontalAlignment="Stretch" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер п/п" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Название задачи" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Описание задачи" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Статус задачи" Binding="{Binding OrderStatus}" Width="*"/>
                <DataGridTextColumn Header="Руководитель" Binding="{Binding NameManager}" Width="*"/>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding NameStaff}" Width="*"/>
                <DataGridTextColumn Header="Дата назначения" Binding="{Binding AssignmentDate, StringFormat='yyyy-MM-dd'}" Width="*"/>
                <DataGridTextColumn Header="Срок выполнения" Binding="{Binding PeriodExecution, StringFormat='yyyy-MM-dd'}" Width="*"/>
                <DataGridTextColumn Header="Дата завершения" Binding="{Binding CompletionDate, StringFormat='yyyy-MM-dd'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Button Name="addTaskButton" Content="Добавить задачу" Margin="10" HorizontalAlignment="Center" Width="100" Height="20" Click="AddTaskButton_Click"/>
            <Button Name="updateTaskButton" Content="Изменить задачу" Margin="10" HorizontalAlignment="Center" Width="100" Height="20" Click="UpdateTaskButton_Click"/>
            <Button Name="deleteTaskButton" Content="Удалить задачу" Margin="10" HorizontalAlignment="Center" Width="100" Height="20" Click="DeleteTaskButton_Click"/>
            <Button Name="refreshDataGridButton" Content="Обновить список" Margin="10" HorizontalAlignment="Center" Width="100" Height="20" Click="RefreshDataGridButton_Click"/>            
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Button Content="Список задач сотрудника" Margin="10" HorizontalAlignment="Center" Width="180" Height="20"/>
            <Button Content="Список задач руководителя" Margin="10" HorizontalAlignment="Center" Width="180" Height="20"/>
            <Button Name="getAllMegeTasks" Content="Список общих задач" Margin="10" HorizontalAlignment="Center" Width="180" Height="20" Click="GetAllMegeTasks_Click"/>
        </StackPanel>
        <StatusBar Grid.Row="5" Background="#FFD6D3D3">
            <StackPanel Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Center">
                <StatusBarItem Margin="5,0">
                    <TextBlock Text="Информация: "/>
                </StatusBarItem>
                <StatusBarItem Margin="5,0">
                    <TextBlock x:Name="infoTextBlock" Text="Какая то информация"/>
                </StatusBarItem>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Center">
                <StatusBarItem Margin="5,0">
                    <TextBlock Text="Дата:"/>
                </StatusBarItem>
                <StatusBarItem Margin="5,0">
                    <TextBlock x:Name="dateTextBlock" Text="00-00-0000"/>
                </StatusBarItem>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Center">

                <StatusBarItem Margin="5,0">
                    <TextBlock Text="Время"/>
                </StatusBarItem>
                <StatusBarItem Margin="5,0">
                    <TextBlock x:Name="timeTextBlock" Text="00:00:00"/>
                </StatusBarItem>
            </StackPanel>
            
        </StatusBar>
    </Grid>
</Window>
